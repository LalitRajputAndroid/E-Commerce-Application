<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragments.AddProductFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addproduct_imgid"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/addimage" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/productname_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Product Name"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#B8B4B4">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:id="@+id/price_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Product Price"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#B8B4B4">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discount_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Product Discount"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#B8B4B4">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:id="@+id/discription_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Product Discription"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#B8B4B4">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/category_spinnerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:spinnerMode="dialog"
        android:background="@drawable/edittext_shape"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/add_productbtn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#d79877"
        android:paddingVertical="14dp"
        android:hint="Add Product"
        android:textColorHint="@color/white"
        android:textStyle="bold" />

</LinearLayout>